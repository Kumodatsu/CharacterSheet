<Bindings>
    <Binding name="INCREMENT_HP" header="CHARACTER_SHEET">
        local M = CS_GetAddon().Charsheet
        M.set_hp(M.CurrentHP + 1)
    </Binding>
    <Binding name="DECREMENT_HP">
        local M = CS_GetAddon().Charsheet
        M.set_hp(M.CurrentHP - 1)
    </Binding>
    <Binding name="TOGGLE_MAIN_FRAME">
        local M = CS_GetAddon().Interface
        M.ToggleMainFrame()
    </Binding>
    <Binding name="TOGGLE_STATS_FRAME">
        local M = CS_GetAddon().Interface
        M.ToggleStatsFrame()
    </Binding>
    <Binding name="TOGGLE_EDIT_FRAME">
        CS_GetAddon().Interface.ToggleEditFrame()
    </Binding>
</Bindings>
